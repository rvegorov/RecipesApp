<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/categoryCardWidth"
    android:layout_height="@dimen/categoryCardHeight"
    android:layout_marginHorizontal="@dimen/halfMargin"
    android:background="?selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="@dimen/shapesRadius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/categoryCardImageHeight"
            android:scaleType="centerCrop"
            tools:src="@drawable/bcg_categories"
            tools:contentDescription="картинка категории"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/halfMargin"
            android:orientation="vertical">

            <TextView
                style="@style/StyleCategoryCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/halfMargin"
                tools:text="Категория" />

            <TextView
                style="@style/StyleCategoryCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/halfMargin"
                tools:text="Краткое описание блюд категории" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>